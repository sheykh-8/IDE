<BorderPane fx:id="mainBorderPane" stylesheets="mainWindow.css" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/12.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sheykh.Controller">

    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <items>
                        <MenuItem onAction="#openDirectory" text="Open Directory" />
                        <SeparatorMenuItem />
                        <MenuItem onAction="#newFile" text="New File" />
                        <SeparatorMenuItem />
                        <MenuItem onAction="#saveFile" text="Save" />
                        <SeparatorMenuItem />
                        <MenuItem onAction="#saveAs" text="Save As" />
                        <SeparatorMenuItem />
                        <MenuItem onAction="#exitMethod" text="Exit" />
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem text="Settings" onAction="#settings" />
                    </items>
                </Menu>
            </MenuBar>
            <HBox alignment="CENTER">
                <Button onAction="#newFile" text="New" />
                <Button onAction="#saveFile" text="Save" />
                <Button onAction="#play" text="play" />
            </HBox>
        </VBox>
    </top>

    <left>
        <GridPane alignment="CENTER" hgap="10" prefHeight="450.0" prefWidth="184.0">
            <Label text="Directories" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="0" />
            <Button fx:id="refreshDirectory" alignment="CENTER" prefHeight="14" prefWidth="14" GridPane.columnIndex="2" GridPane.rowIndex="0">
                <graphic>
                    <ImageView fitHeight="14.0" fitWidth="15.0">
                        <image>
                            <Image url="resources/baseline_refresh_black_18dp.png" />
                        </image>
                    </ImageView>
                </graphic>
            </Button>
            <TreeView fx:id="directories" maxWidth="200" prefWidth="190.0" GridPane.columnSpan="3" GridPane.rowIndex="1" />
            <JFXButton fx:id="openFolder" buttonType="RAISED" onAction="#openDirectory" prefHeight="25.0" prefWidth="108.0" ripplerFill="#99d066" style="-fx-background-color: #689f38;" text="Open Directory" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Project" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="2" />
            <Button fx:id="newProject" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="24.0" prefWidth="30.0" GridPane.columnIndex="2" GridPane.rowIndex="2">
                <graphic>
                    <ImageView preserveRatio="true">
                        <image>
                            <Image url="@resources/baseline-add-24px.png" />
                        </image>
                    </ImageView>
                </graphic>
                <tooltip>
                    <Tooltip text="Create a Project" />
                </tooltip>
            </Button>
            <TreeView fx:id="projectView" maxWidth="200" GridPane.columnIndex="0" GridPane.columnSpan="3" GridPane.rowIndex="3" />
            <JFXButton fx:id="workspace" buttonType="RAISED" onAction="#openWorkspace" prefHeight="25.0" prefWidth="112.0" ripplerFill="#99d066" style="-fx-background-color: #689f38;" text="Workspace" textFill="WHITE" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         <columnConstraints>
            <ColumnConstraints maxWidth="235.0" minWidth="19.0" prefWidth="30.0" />
            <ColumnConstraints maxWidth="235.0" minWidth="41.0" prefWidth="103.0" />
            <ColumnConstraints maxWidth="235.0" minWidth="12.0" prefWidth="31.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Region minHeight="9" />
            <TabPane fx:id="tabs" VBox.vgrow="ALWAYS" />
            <VBox alignment="CENTER" style="-fx-background-color: white;">
                <Region maxHeight="10" minHeight="10" />
                <HBox alignment="CENTER" spacing="5">
                    <JFXTextField fx:id="regSearchT" focusColor="darkseagreen" promptText="Search" />
                    <JFXButton fx:id="regSearchB" buttonType="FLAT" onAction="#regularSearch" style="-fx-background-color: green; -fx-text-fill: white;" text="Search" />
                </HBox>
                <Hyperlink fx:id="advanceSearchButton" onAction="#advanceSearch" text="Advanced Search" />
            </VBox>
        </VBox>
    </center>

    <right>
        <VBox>
            <Label text="Words in Directory" />
            <TableView fx:id="wordsInDirectory" maxWidth="200" />
            <Label text="Words in Project" />
            <TableView fx:id="wordsInProject" maxWidth="200" />
        </VBox>
    </right>

</BorderPane>
